<div id="content">
<h1>Welcome to RetFlix! Search our collection of movies below.</h1>
<table>

	 <thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th>Year Released</th>
			<th>Rating</th>
			<th>User ID</th>
			<th></th>
			<th></th>
		</tr>
	</thead>

	<tbody>
	<% @movies.each do |movie| %>
	<tr>
		<td><%= movie.title %></td>
		<td><%= movie.description %></td>
		<td><%= movie.year_released %></td>
		<td><%= movie.rating %></td>
		<td><%= movie.user_id %></td>
		<td><%= link_to 'Show', movie %></td>
		<td><%= link_to 'Edit', edit_movie_path(movie) %></td>
		<td><%= link_to 'Delete', movie, method: :delete, data: { confirm: 'Are you sure? '} %></td>
	</tr>
	<% end %>
</tbody>

</table>

</div>

<br>

<div>
  <%= link_to 'New Movie', new_movie_path %>
</div>

<br>

<%= form_tag movies_search_path, method: :get do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

