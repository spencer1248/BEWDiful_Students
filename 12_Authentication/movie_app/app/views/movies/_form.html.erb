<%= form_for @movie do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :year_released %>
    <%= f.text_field :year_released %>
  </div>
  <div>
    <%= f.label :rating %>
    <%= f.text_field :rating %>
  </div>
  <div>
    <%= f.label :user_id %>
    <%= f.text_field :user_id %>
  </div>


  <div>
    <%= f.submit %>
  </div>
<% end %>